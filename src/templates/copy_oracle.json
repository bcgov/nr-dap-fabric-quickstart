{
    "name": "Oracle",
    "type": "Copy",
    "dependsOn": [],
    "policy": {
        "timeout": "0.12:00:00",
        "retry": 0,
        "retryIntervalInSeconds": 30,
        "secureOutput": false,
        "secureInput": false
    },
    "typeProperties": {
        "source": {
            "type": "OracleSource",
            "partitionOption": "None",
            "numberPrecision": 38,
            "numberScale": 18,
            "queryTimeout": "02:00:00",
            "datasetSettings": {
                "annotations": [],
                "type": "OracleTable",
                "schema": [],
                "typeProperties": {
                    "schema": "<SCHEMA-NAME>",
                    "table": "<TABLE-NAME>"
                },
                "externalReferences": {
                    "connection": "<YOUR_ORACLE_CONNECTION_ID>"
                }
            }
        },
        "sink": {
            "type": "LakehouseTableSink",
            "tableActionOption": "Append",
            "partitionOption": "None",
            "applyVOrder": true,
            "datasetSettings": {
                "annotations": [],
                "connectionSettings": {
                    "name": "quickstart_lh",
                    "properties": {
                        "annotations": [],
                        "type": "Lakehouse",
                        "typeProperties": {
                            "workspaceId": "<YOUR_WORKSPACE_ID>",
                            "artifactId": "<YOUR_LAKEHOUSE_ARTIFACT_ID>",
                            "rootFolder": "Tables"
                        },
                        "externalReferences": {
                            "connection": "<YOUR_LAKEHOUSE_CONNECTION_ID>"
                        }
                    }
                },
                "type": "LakehouseTable",
                "schema": [],
                "typeProperties": {
                    "schema": "*_replication",
                    "table": "*_raw"
                }
            }
        },
        "enableStaging": false,
        "translator": {
            "type": "TabularTranslator",
            "typeConversion": true,
            "typeConversionSettings": {
                "allowDataTruncation": true,
                "treatBooleanAsNumber": false
            }
        }
    }
}
